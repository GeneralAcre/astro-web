---
import Layout from '../layouts/Layout.astro';
import Custombutton from '@/components/custombutton.astro';
import Title from '@/components/title.astro';
---

<Layout>
    {/* This main div fills the screen, hides overflow, and uses flex-col to stack sections */}
    <div class="h-screen flex flex-col p-8 overflow-hidden">

        {/* 1. Top Section: Title and Subtitle (Centered Horizontally) */}
        <div class="text-center text-[#004E74] mb-auto"> {/* mb-auto pushes it up */}
            <h1 class="text-5xl font-extrabold mb-3 leading-tight">Blockchain Flashcard</h1>
            <h3 class="text-xl font-medium text-gray-700 max-w-lg mx-auto">All everything about Blockchain and Crypto</h3>
        </div>

        {/* 2. Middle Section: Picture (Center-Left) */}
        {/* flex-grow makes it take up all available space between top and bottom sections */}
        {/* flex items-center justify-start positions the image within this middle section */}
        <div class="flex-grow flex items-center justify-start w-full">
            {/* The image itself */}
            <img
                src="favicon.svg"              
            />
        </div>

        {/* 3. Bottom Section: Button (Centered Horizontally) */}
        <div class="mt-auto text-center pb-8"> {/* mt-auto pushes it down, pb-8 for padding from bottom */}
            <Custombutton href="/unit" variant="default" size="lg">Start</Custombutton>
        </div>

    </div>
</Layout>